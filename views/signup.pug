    div(class="col-lg-6 offset-lg-3 jp-login")
      h2(class="text-center jp-login__title") Registrer deg
      form(action="/signup" method="post" autocomplete="on")
        label(class="w-100")
          span(class="sr-only") Navn
          input(class="w-100 jp-login__input" type="text" name="name" placeholder="Navn")
